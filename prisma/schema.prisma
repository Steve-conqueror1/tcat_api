generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Profile {
  id    String @id @default(uuid())
  fistName String?
  lastName String?
  city String?
  dob DateTime?
  postalCode String
  user User @relation(fields: [userId], references: [id])
  userId String @unique
}

model User{
  id    String @id @default(uuid())
  email String @unique
  password String
  profile Profile?
  role Role @default(BASIC)
  isConfirmed Boolean @default(false)
}

enum Role{
  BASIC
  ADMIN
  SUPER_ADMIN
}